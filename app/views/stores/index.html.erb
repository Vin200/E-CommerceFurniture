<p id="notice"><%= notice %></p>

<% if session[:admin] %>
  <h1 style="text-align:center">Products</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td><%= store.name %></td>
          <td><%= store.category %></td>
          <td><%= store.price %></td>
          <td><%= store.description %></td>
          <td><%= image_tag store.product_image,height:"100px",width:"150px" if store.product_image.attached? %></td>
          <td><%= link_to 'Show', store, class: "btn btn-primary"%></td>
          <td><%= link_to 'Edit', edit_store_path(store),class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-secondary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New Store', new_store_path, class: "btn btn-success"%>
<% else %>
  <h2>Not Logged In!Please Login..</h2>
  <%= link_to 'Admin Login', admin_login_path, class: "btn btn-primary"%>
<% end %> 
